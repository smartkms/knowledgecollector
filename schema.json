{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "typefield": {
        "type": "string",
        "enum": ["messages", "file"]
      },
      "platform": {
        "type": "string"
      },
      "id": {
        "type": "string"
      },
      "timestamp": {
        "type": "string",
        "format": "date-time"
      },
      "content": {
        "type": "object",
        "oneOf": [
          {
            "properties": {
              "channelId": {
                "type": "string"
              },
              "messages": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "createdDateTime": {
                      "type": "string",
                      "format": "date-time",
                      "description": "Čas ustvarjanja sporočila"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "description": "ID uporabnika"
                        },
                        "displayName": {
                          "type": "string",
                          "description": "Prikazno ime uporabnika"
                        }
                      },
                      "required": ["id", "displayName"],
                      "description": "Informacije o uporabniku, ki je poslal sporočilo"
                    },
                    "body": {
                      "type": "string",
                      "description": "Vsebina sporočila"
                    }
                  },
                  "required": ["createdDateTime", "user", "body"],
                  "description": "Posamezno sporočilo"
                }
              }
            },
            "required": ["channelId", "messages"],
            "description": "Struktura vsebine za seznam sporočil"
          },
          {
            "properties": {
              "fileName": {
                "type": "string",
                "description": "Ime datoteke"
              },
              "fileLocation": {
                "type": "string",
                "description": "Lokacija datoteke"
              }
            },
            "required": ["fileName", "fileLocation"],
            "description": "Struktura vsebine za metapodatke datoteke"
          }
        ]
      }
    },
    "required": ["typefield", "platform", "id", "timestamp", "content"],
    "description": "Osnovna struktura dogodka s prilagodljivo vsebino glede na tip"
  }